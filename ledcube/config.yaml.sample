# LED Cube config (sample)
driver: pwm              # pwm | sim
gpio: 18
color_order: GRB         # GRB | RGB | BGR | ...
brightness: 0.8
fps: 60

dim: { x: 5, y: 26, z: 5 }
pitch_mm: 17.6
panel_gap_mm: 25
x_flip_every_row: true
y_flip_every_panel: false

power:
  limit_amps: 35.0       # soft limit (estimator-based)
  white_cap: 0.85        # clamp per-LED r+g+b sum (0..1)
  soft_start_ms: 800
